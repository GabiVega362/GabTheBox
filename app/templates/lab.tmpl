{{template "header" .}}

{{ define "card" }}
    <div class="card">
        <div class="title">
            <h2>{{ .Title }}</h2>
        </div>
        <div class="description">
            <p>{{ .Description }}</p>
        </div>

        {{if .Deployed}}
        <div class="button up">
            <span>Stop</span>
        </div>
        {{else}}
        <form action="./lab" method="POST">
            <input type="hidden" name="enviroment" value="{{ .Image }}">
            {{ if .Deployed }}
                <input class="button up" type="submit" name="action" value="Stop">
            {{ else }}
                <input class="button" type="submit" name="action" value="Start">
            {{ end }}
        </form>
        {{ end }}
    </div>
    {{ end }}

<div class="cards">

    {{ range .Enviroments}}
    {{ template "card" .}}
    {{ end }}

</div>


{{template "footer" .}}