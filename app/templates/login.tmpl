{{template "header" .}}
<div class="content">
    <summary class="highlight">
        <h2>Entrar</h2>
        <h4>¡Nos alegramos de verte de nuevo!</h4>
    </summary>

    <form action="/login" method="POST">
        <div class="form-group">
            <label for="username">Usuario o Email</label>
            <input required type="text" name="user" id="username" autofocus placeholder="gabthebox@example.com" />
        </div>

        <div class="form-group">
            <label for="password">Contraseña</label>
            <input required type="password" name="pass" id="password" autocomplete="false" />
        </div>

        <div class="form-group">
            <input class="button" type="submit" value="Entrar" />
        </div>
    </form>
</div>
{{template "footer" .}}